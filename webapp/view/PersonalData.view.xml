<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="ns.com.employeeapp.controller.PersonalData" displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
					    <List noDataText="Drop list items here" id="list0" items="{/SalesOrderSet}">
					        <items>
					            <StandardListItem type="Navigation" title="{SalesOrderID}" description="{CustomerName}" icon="sap-icon://personnel-view" id="item0"/>
					        </items>
					    </List>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>